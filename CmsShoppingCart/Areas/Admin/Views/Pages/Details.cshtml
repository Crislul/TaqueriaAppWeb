@model Page

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">
        <i class="bi bi-file-text"></i> Page Details
    </h1>

    <div class="card shadow-lg">
        <div class="card-body">
            <dl class="row mb-0">
                <!-- ID -->
                <dt class="col-sm-3 fw-bold text-secondary">ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <!-- Title -->
                <dt class="col-sm-3 fw-bold text-secondary">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <!-- Slug -->
                <dt class="col-sm-3 fw-bold text-secondary">Slug</dt>
                <dd class="col-sm-9 text-break">@Html.DisplayFor(model => model.Slug)</dd>

                <!-- Content -->
                <dt class="col-sm-3 fw-bold text-secondary">Content</dt>
                <dd class="col-sm-9">
                    <div class="border p-3 rounded bg-light">@Html.Raw(Model.Content)</div>
                </dd>

                <!-- Sorting -->
                <dt class="col-sm-3 fw-bold text-secondary">Sorting</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Sorting)</dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
