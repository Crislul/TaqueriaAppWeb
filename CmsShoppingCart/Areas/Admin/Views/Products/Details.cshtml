@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">
        <i class="bi bi-info-circle"></i> Product Details
    </h1>

    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title text-uppercase mb-3">
                <i class="bi bi-box"></i> Product Information
            </h4>
            <hr />
            <dl class="row">
                <!-- Product ID -->
                <dt class="col-sm-3 fw-bold">Product ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <!-- Product Name -->
                <dt class="col-sm-3 fw-bold">Product Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <!-- Product Slug -->
                <dt class="col-sm-3 fw-bold">Slug</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Slug)</dd>

                <!-- Product Description -->
                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Html.Raw(Model.Description)</dd>

                <!-- Product Price -->
                <dt class="col-sm-3 fw-bold">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C2")</dd>

                <!-- Product Category -->
                <dt class="col-sm-3 fw-bold">Category</dt>
                <dd class="col-sm-9">@Model.Category.Name</dd>

                <!-- Product Image -->
                <dt class="col-sm-3 fw-bold">Product Image</dt>
                <dd class="col-sm-9">
                    <img src="~/media/products/@Model.image" class="img-fluid rounded" alt="Product Image" />
                </dd>
            </dl>
        </div>
    </div>

    <!-- Action Links -->
    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg shadow-sm">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>