@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <h1 class="text-warning text-center mb-4">
        <i class="bi bi-pencil-square"></i> Editar Categoria
    </h1>

    <h4 class="text-secondary text-center mb-3">Update Category Details</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert">
                            Please fix the errors below.
                        </div>

                        <!-- Hidden Sorting Field -->
                        <input type="hidden" asp-for="Sorting" />

                        <!-- Category Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter new category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}