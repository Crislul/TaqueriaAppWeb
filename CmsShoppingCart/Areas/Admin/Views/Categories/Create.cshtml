@model Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <h1 class="text-primary text-center mb-4">
        <i class="bi bi-folder-plus"></i> Create Category
    </h1>

    <h4 class="text-secondary text-center mb-3">Category Details</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;">
                            Please fix the errors below.
                        </div>

                        <!-- Category Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
