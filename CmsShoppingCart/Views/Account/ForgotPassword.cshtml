@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center mb-4">Ingresa tu correo electrónico para recibir instrucciones para recuperar tu contraseña.</p>

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Email" class="font-weight-bold">Correo Electrónico</label>
                            <input type="email" id="Email" name="email" class="form-control" placeholder="Ingresa tu correo" required />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block mt-4">Enviar Instrucciones</button>
                    }

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Login", "Account")" class="text-primary">Volver a Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>