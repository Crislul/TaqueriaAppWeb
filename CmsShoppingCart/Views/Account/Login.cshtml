@model Login

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <h1 class="display-4 text-primary">Iniciar Sesión</h1>
            <p class="lead text-muted">Accede a tu cuenta para continuar</p>
        </div>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control form-control-lg" placeholder="Correo electrónico" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Contraseña" class="form-label"></label>
                <input asp-for="Contraseña" class="form-control form-control-lg" type="password" placeholder="Contraseña" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between mb-4">
                <div>
                    <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted">¿Olvidaste tu contraseña?</a>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
            </div>

            <div class="text-center">
                <p class="text-muted">¿No tienes una cuenta? <a href="@Url.Action("Register", "Account")" class="text-primary">Regístrate</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}