@model User

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-success">@ViewData["Title"]</h1>
        <p class="text-muted">Crea tu cuenta y accede a nuestras funcionalidades exclusivas.</p>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-action="Register">
                        <!-- Mensajes de validación -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ingresa tu nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Correo -->
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Correo" class="form-control form-control-lg" placeholder="Ingresa tu correo electrónico" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <!-- Contraseña -->
                        <div class="mb-3">
                            <label asp-for="Contraseña" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Contraseña" class="form-control form-control-lg" placeholder="Crea una contraseña segura" />
                            <span asp-validation-for="Contraseña" class="text-danger"></span>
                        </div>

                        <!-- Botón de registro -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-plus-fill"></i> Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón para regresar -->
    <div class="text-center mt-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Volver al Inicio
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}