@model CmsShoppingCart.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Aumenté el tamaño del formulario aquí -->
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="ResetPassword" asp-controller="Account">
                        @* Enlazar correctamente los valores del modelo con asp-for *@
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group mb-4">
                            <!-- Aumenté el margen inferior para separar más los campos -->
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control form-control-lg" placeholder="Nueva Contraseña" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <!-- Aumenté el margen inferior para separar más los campos -->
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirmar Contraseña" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fa fa-lock"></i> Restablecer Contraseña
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>&copy; 2025 Taqueria Iguala</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Renderizar los scripts necesarios para la validación *@
    <partial name="_ValidationScriptsPartial" />
}
