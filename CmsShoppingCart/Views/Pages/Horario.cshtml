@{
    Layout = null;
    ViewData["Title"] = "Horario De Atención";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> 

    <style>
        body {
            background-image: url('/images/tabla.jpg'); /* Asegúrate que tabla.jpg esté en wwwroot/images */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
            text-align: center;
            font-family: 'Arial', sans-serif;
            padding: 50px;
            margin: 0;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: rgba(0, 0, 0, 0.7); /* Fondo semitransparente */
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.4);
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-transform: uppercase;
            color: #fff;
        }

        .horario-item {
            font-size: 1.5rem;
            padding: 15px;
            border-radius: 10px;
            margin: 10px 0;
            transition: transform 0.3s ease-in-out;
        }

        .horario-item:hover {
            transform: scale(1.05);
        }

        .cerrado {
            background-color: red;
            color: #fff;
        }

        .abierto {
            background-color: green;
            color: #fff;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 30px;
            background-color: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.2rem;
            text-align: center;
        }

        .btn:hover {
            background-color: #5a6268;
            text-decoration: none;
        }

        .btn i {
            margin-right: 8px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Horario de Atención</h1>
        <div class="horario-item cerrado">Lunes - Cerrado</div>
        <div class="horario-item cerrado">Martes - Cerrado</div>
        <div class="horario-item abierto">Miércoles - 15:30 PM - 12:00 AM</div>
        <div class="horario-item abierto">Jueves - 15:30 PM - 12:00 AM</div>
        <div class="horario-item abierto">Viernes - 15:30 PM - 12:00 AM</div>
        <div class="horario-item abierto">Sábado - 15:30 PM - 12:00 AM</div>
        <div class="horario-item abierto">Domingo - 15:30 PM - 12:00 AM</div>

        <a href="@Url.Action("Page", "Pages", new { slug = "home" })" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Menú Principal
        </a>
    </div>
</body>