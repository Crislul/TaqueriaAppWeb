@model IEnumerable<Contacto>

@{
    ViewData["Title"] = "Mensajes Recibidos";
    var mensajesNuevos = ViewBag.MensajesNuevos ?? 0; // Solo muestra si hay mensajes nuevos
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="m-0">
                @ViewData["Title"]
            </h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Mensaje</th>
                            <th>Fecha</th>
                            <th>Telefono</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    No hay mensajes disponibles.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var contacto in Model)
                            {
                                <tr class="@(contacto.Leido ? "" : "font-weight-bold")">
                                    <td>@contacto.Nombre</td>
                                    <td>@contacto.Correo</td>
                                    <td>@contacto.Mensaje</td>
                                    <td>@contacto.Fecha.ToString("g")</td>
                                    <td>@contacto.Telefono</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>