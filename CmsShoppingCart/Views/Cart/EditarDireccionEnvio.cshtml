@model CmsShoppingCart.Models.DireccionEnvio

@{
    ViewData["Title"] = "Editar Dirección de Envío";
}

<h2 class="text-center my-4 text-primary">✏️ Editar Dirección</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <form asp-action="EditarDireccionEnvio" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Calle" class="form-label fw-bold">🏠 Calle</label>
                            <input asp-for="Calle" class="form-control rounded-pill" />
                            <span asp-validation-for="Calle" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Colonia" class="form-label fw-bold">🌆 Colonia</label>
                            <input asp-for="Colonia" class="form-control rounded-pill" />
                            <span asp-validation-for="Colonia" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ciudad" class="form-label fw-bold">🏙️ Ciudad</label>
                            <input asp-for="Ciudad" class="form-control rounded-pill" />
                            <span asp-validation-for="Ciudad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="CodigoPostal" class="form-label fw-bold">📮 Código Postal</label>
                            <input asp-for="CodigoPostal" class="form-control rounded-pill" />
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Telefono" class="form-label fw-bold">📞 Teléfono</label>
                            <input asp-for="Telefono" class="form-control rounded-pill" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Referencias" class="form-label fw-bold">📍 Referencias</label>
                            <textarea asp-for="Referencias" class="form-control rounded-4"></textarea>
                            <span asp-validation-for="Referencias" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4 rounded-pill me-2">
                                💾 Guardar Cambios
                            </button>
                            <a asp-action="MisDirecciones" class="btn btn-outline-secondary px-4 rounded-pill">↩️ Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}