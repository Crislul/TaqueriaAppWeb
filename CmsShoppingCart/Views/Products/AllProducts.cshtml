@model IEnumerable<CmsShoppingCart.Models.Product>

@{
    ViewData["Title"] = "Todos los Productos";
}

<h2 class="text-center text-dark" style="font-weight: 900; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4); font-size: 2.5rem;">
    Lista de Productos
</h2>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded-3">
                    <img src="@Url.Content("~/media/products/" + product.image)" class="card-img-top img-fluid rounded-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-primary">@Html.Raw(product.Name)</h5>
                        <p class="card-text text-muted flex-grow-1">@Html.Raw(product.Description)</p>
                        <p class="card-text"><strong class="text-success">Precio: $@product.Price</strong></p>
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-outline-primary w-100 mt-auto">
                            Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>